{
  "name": "ntweb",
  "version": "0.1.0",
  "description": "A small site with great intentions",
  "author": "Miguel Angel Rivera Notararigo <ntrrgx@gmail.com>",
  "license": "MIT",
  "homepage": "https://nt.web.ve",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ntrrg/ntrrg.github.io.git"
  },
  "bugs": {
    "url": "https://github.com/ntrrg/ntrrg.github.io/issues"
  },
  "directories": {
    "lib": "src",
    "test": "test"
  },
  "scripts": {
    "clean": "rm -rf .nyc_output/ .vendor/node .vendor/hugo node_modules/",
    "ci": "npm run lint && npm test && .vendor/hugo",
    "dev": "npm run nodemon -- -x 'npm run lint:js && npm test'",
    "edition": "npm run nodemon -- -e md -x 'npm run lint:md'",
    "lint": "npm run lint:js && npm run lint:md",
    "lint:js": "echo standart src/",
    "lint:md": "remark .",
    "nodemon": "NODE_ENV=development nodemon -V",
    "start": ".vendor/hugo -DEF server",
    "test": "echo NODE_ENV=test nyc mocha --recursive"
  },
  "dependencies": {},
  "devDependencies": {
    "mocha": "^5.1.1",
    "nodemon": "^1.17.4",
    "nyc": "^11.7.3",
    "remark-cli": "^5.0.0",
    "remark-frontmatter": "^1.2.0",
    "remark-lint": "^6.0.1",
    "remark-preset-lint-recommended": "^3.0.1"
  },
  "engines": {
    "node": ">=10"
  },
  "os": [
    "linux"
  ],
  "nodemonConfig": {
    "ignore": [
      "/.vendor/",
      "/public/"
    ]
  },
  "remarkConfig": {
    "plugins": [
      "remark-preset-lint-recommended",
      "remark-frontmatter",
      [
        "remark-lint-list-item-indent",
        "space"
      ]
    ]
  },
  "nyc": {
    "check-coverage": true,
    "lines": 80,
    "statements": 80,
    "functions": 80,
    "branches": 80,
    "exclude": [
      ".vendor/",
      "node_modules/",
      "test/",
      "public/"
    ]
  }
}
