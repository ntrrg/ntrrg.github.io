{{ define "data" }}
  {
    "pages": [
      {{ range $i, $val := .Paginator.Pages }}
        {{ if ne $i 0 }},{{ end }}
        {
          "url": {{ jsonify .Permalink }},
          "title": {{ jsonify .Title }},
          "description": {{ jsonify .Description }}
        }
      {{ end }}
    ],
    "paginationPrefix": "{{ .Permalink }}page/",
    "fist": "{{ template "pagination-item" .Paginator.First }}",
    "prev": "{{ template "pagination-item" .Paginator.Prev }}",
    "next": "{{ template "pagination-item" .Paginator.Next }}",
    "last": "{{ template "pagination-item" .Paginator.Last }}"
  }
{{ end }}

{{ define "pagination-item" }}{{ with . }}{{ strings.TrimSuffix "index.json" .URL }}{{ end }}{{ end }}

