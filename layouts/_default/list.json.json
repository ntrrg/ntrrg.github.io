{{ define "data" }}
  {
    "pages": [
      {{ range $i, $val := .Paginator.Pages }}
        {{ if ne $i 0 }},{{ end }}
        {
          "url": {{ jsonify .Permalink }},
          "title": {{ jsonify .Title }},
          "description": {{ jsonify .Description }}
        }
      {{ end }}
    ],
    "paginationPrefix": "{{ .Permalink }}page/",
    "prev": "{{ with .Paginator.Prev }}{{ strings.TrimSuffix "index.json" .URL }}{{ end }}",
    "next": "{{ with .Paginator.Next }}{{ strings.TrimSuffix "index.json" .URL }}{{ end }}"
  }
{{ end }}

