{{ if and (eq .Params.comments true) (not .Site.IsServer) }}
  {{ $page := . }}

  {{ with .Site.Params.disqus }}
    <br/>
    <!-- <link rel="preconnect" href="https://disqus.com"> -->

    <div id="disqus_thread">
      <style>
        #commentsToggler {
          border: 0.1em solid;
          display: block;
          padding: 1em;
          text-align: center;
        }
      </style>

      <a id="commentsToggler" href="#">{{ i18n "SHOW_COMMENTS" }}</a>
    </div>

    <script>
      function showComments() {
        var disqus_config = function () {
          this.page.url = '{{ absURL $page.Permalink }}';
          this.page.identifier = '{{ $page.Permalink }}';
        };

        (function() {
          var d = document, s = d.createElement('script');
          s.src = 'https://{{ . }}.disqus.com/embed.js';
          s.setAttribute('data-timestamp', +new Date());
          (d.head || d.body).appendChild(s);
        })();
      }

      const commentsToggler = document.querySelector('#commentsToggler')

      commentsToggler.addEventListener('click', (e) => {
        showComments()
        e.preventDefault()
      })
    </script>

    <noscript>
      Please enable JavaScript to view the <a href="https://disqus.com/?ref_noscript">comments powered by Disqus.</a>
    </noscript>
  {{ end }}
{{ end }}

