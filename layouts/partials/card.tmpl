<div class="card">
  {{ if eq .Type "authors" }}
    <a href="{{ .Permalink }}">
      <h3>{{ .Params.name }} ({{ .Params.id }})</h3>
    </a>
  {{ else if gt (len .Pages) 0 }}
    <a href="{{ .Permalink }}">{{ .Title }} ({{ len .Pages }})</a>
  {{ else }}
    <a href="{{ .Permalink }}"><h3>{{ .Title }}</h3></a>

    {{ with .Description }}
      <p>{{ . }}</p>
    {{ end }}

    {{ partial "metadata-box.tmpl" . }}
  {{ end }}
</div>
