{{ define "data" }}
  {
    "refs": [
      {{ partial "get-refs.tmpl" . }}

      {{ $i := 0 }}
      {{ range $i, $x := .Scratch.Get "refs" }}
        {{ if ne $i 0 }},{{ end }}

        {
          "url": {{ jsonify .Permalink }},
          "type": {{ jsonify .Type }},
          "title": {{ jsonify .Title }}
        }

        {{ $i = add $i 1 }}
      {{ end }}
    ],
    "rels": [
      {{ .Scratch.Set "relsPrefix" "." }}
      {{ partial "get-rels.tmpl" . }}

      {{ $i := 0 }}
      {{ range $i, $rel := (.Scratch.Get "rels") }}
        {{ if ne $i 0 }},{{ end }}

        {
          "url": {{ jsonify .Permalink }},
          "type": {{ jsonify .Type }},
          "title": {{ jsonify .Title }}
        }

        {{ $i = add $i 1 }}
      {{ end }}
    ]
  }
{{ end }}

